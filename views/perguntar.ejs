<%- include ("./partials/header.ejs") %>
<body>
    <%- include ("./partials/navbar.ejs") %>
    <div class="container">
        <div class="card" id="formulario-pergunta">
            <div class="card-header">
                <h3>Realizar perguntar</h3>
            </div>
            <div class="card-body">
                <form action="/salvarpergunta" method="post">
                    <label for="titulo">Título: </label>
                    <input class="form-control" type="text" name="titulo" id="titulo" placeholder="Titulo">
                    <br>
                    <label for="descricao">Descrição: </label>
                    <textarea class="form-control" name="descricao" id="descricao" placeholder="Descreve sua pergunta aqui"></textarea>
                    <br>
                    <button class="btn btn-primary" type="submit">Perguntar</button>
                </form>
            </div>
        </div>   
    </div> 
</body>
